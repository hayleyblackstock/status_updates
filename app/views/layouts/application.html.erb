<!DOCTYPE html>
<html>
<head>
  <title>StatusUpdates</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div>
    <% flash.each do |type, message| %>
    <% if type == "notice" %>
    <b>
      <center>
        <div>
          <%= message %>
        </div>
      </center>
    </b>
    <% end %>
    <% end %>
    
<%= yield %>

</body>
</html>
